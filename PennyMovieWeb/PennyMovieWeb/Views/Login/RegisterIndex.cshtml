@model PennyMovieWeb.DataBase.MemberList

@{
    ViewBag.Title = "RegisterIndex";
}

<h2>RegisterIndex2</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()//防止跨站請求偽造（CSRF）攻擊的HTML助手方法,會在form裡面遷入token

    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
